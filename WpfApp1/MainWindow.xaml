<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TabControl>


            <TabItem Header="Риэлтор">
                <Grid Background="Gray">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="ListView1" Margin="5" Grid.Row="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FirstName}" />
                                <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding MiddleName}" />
                                <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding LastName}"/>
                                <GridViewColumn Header="Плата" DisplayMemberBinding="{Binding DealShare}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                        <Button Content="Редактировать" Width="90" Margin="0,0,5,0" Click="BtnAgentEdit_Click"/>
                        <Button Content="Удалить" Width="90" Margin="0,0,5,0" Click="BtnAgentDelete_Click"/>
                        <Button Content="Создать" Width="90" Click="BtnAgentAdd_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Клиент">
                <Grid Background="Gray">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="ListView2" Margin="5" Grid.Row="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" />
                                <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FirstName}" />
                                <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding MiddleName}" />
                                <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding LastName}" />
                                <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" />
                                <GridViewColumn Header="Почта" DisplayMemberBinding="{Binding Email}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                        <Button Content="Редактировать" Width="90" Margin="0,0,5,0" Click="Button_Click_EditClient"/>
                        <Button Content="Удалить" Width="90" Margin="0,0,5,0" Click="Button_Click_DeleteClient"/>
                        <Button Content="Создать" Width="90" Click="Button_Click_CreateClient"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>