<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TabControl>
            <TabItem Header="Риэлтор">
                <Grid Background="Gray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="713*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="ListView1" Margin="5,5,5,5" Grid.ColumnSpan="3">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FirstName}" />
                                <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding MiddleName}" />
                                <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding LastName}"/>
                                <GridViewColumn Header="Плата" DisplayMemberBinding="{Binding DealShare}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Grid.ColumnSpan="3" Margin="0,346,0,0">
                        <Button Content="Редактироватьт" Click="Button_Click_1"/>
                        <Button Content="Удалить" Click="Button_Click_2"/>
                        <Button Content="Создать" Click="Button_Click_3"/>
                    </StackPanel>

                </Grid>
            </TabItem>


            <TabItem Header="Клиент">
                <Grid Background="Gray">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>


                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="ListView2" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" />
                                <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FirstName}" />
                                <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding MiddleName}" />
                                <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding LastName}" />
                                <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" />
                                <GridViewColumn Header="Почта" DisplayMemberBinding="{Binding Email}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Grid.Row="1">
                        <Button Content="Редактироватьт"/>
                        <Button Content="Удалить" Click="Button_Click"/>
                        <Button Content="Создать"/>
                    </StackPanel>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
