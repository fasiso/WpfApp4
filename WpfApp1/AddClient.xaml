<Window x:Class="WpfApp1.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Клиент" Height="240" Width="350"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Фамилия:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtLastName" Grid.Row="0" Grid.Column="1" Margin="5,2"/>

        <TextBlock Text="Имя:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtFirstName" Grid.Row="1" Grid.Column="1" Margin="5,2"/>

        <TextBlock Text="Отчество:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtMiddleName" Grid.Row="2" Grid.Column="1" Margin="5,2"/>

        <TextBlock Text="Телефон:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtPhone" Grid.Row="3" Grid.Column="1" Margin="5,2"/>

        <TextBlock Text="Почта:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtEmail" Grid.Row="4" Grid.Column="1" Margin="5,2"/>

        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="ОК" Width="70" Click="BtnOk_Click" Margin="0,0,10,0"/>
            <Button Content="Отмена" Width="70" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>